<section class="single-post">
<div class="text-center">
  <h2>{{post.title}}</h2>
  <p>{{post.description}}</p>
  <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>

  <h3>comments</h3>
  <h2>{{name}}</h2>

  {{#each comments as |comment|}}

   {{>comment-card}}
  {{/each}}
</div>

<!-- form to get new comments-->
 <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input" id="comment-desc"></textarea>

      <button type="submit" class="btn comment-btn">Submit</button>
    </div>
  </form>
</div>
</section>