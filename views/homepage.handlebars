{{#each posts as |post|}}
  <div class="row mb-4 post">
    <a href="/post/{{post.id}}">
      <div class="col-md-5">
        <h2>
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->
          {{post.title}}
        </h2>
        <div class="col-md-7">
          <p>
            {{post.description}}
          </p>
        </div>
        <p>Post by
          {{post.user.name}}
          on
          {{format_date post.date_created}}</p>
      </div>
    </a>

  </div>
{{/each}}